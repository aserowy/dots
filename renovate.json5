{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/.*\\.nix$/"],
      "matchStrings": [
        "^\\s*image\\s*=\\s*\".*:(?<currentValue>.+?)\";\\s+# (?<datasource>.+?)\\/(?<depName>.+?)(\\@(?<versioning>.+?))?$"
      ]
    }
  ]
}
