set $browser "microsoft-edge-beta \
    --enable-features=UseOzonePlatform,WebRTCPipeWireCapturer \
    --ozone-platform=wayland"

set $explorer wezterm start --class lf -- lf
set $menu rofi -show run
set $terminal wezterm

# STARTUP

# exec_always $HOME/.config/sway/gsettings.sh
exec_always dbus-update-activation-environment --systemd \
    DISPLAY \
    SWAYSOCK \
    GTK_IM_MODULE \
    QT_IM_MODULE \
    XMODIFIERS \
    DBUS_SESSION_BUS_ADDRESS \
    WAYLAND_DISPLAY \
    XDG_CURRENT_DESKTOP=sway

exec $HOME/.config/sway/wallpaper.sh

exec dunst
exec eww daemon
exec onedrive --monitor

exec swayidle -w -d \
    timeout 600 'systemctl suspend'

exec ncspot-standalone

# STYLING

default_border pixel 1

for_window [class=".*"]     opacity .97
for_window [app_id=".*"]    opacity .97

client.focused          #61afef #61afef #61afef #61afef #61afef
client.focused_inactive #282c34 #282c34 #282c34 #282c34 #282c34
client.urgent           #e06c75 #e06c75 #e06c75 #e06c75 #e06c75
client.unfocused        #282c34 #282c34 #282c34 #282c34 #282c34

gaps top 15
gaps bottom 15
gaps left 15
gaps right 15

gaps inner 10

# KEYBINDINGS
    
set $mod Mod4
set $alt Mod1

set $left h
set $down j
set $up k
set $right l

## Applications

bindsym $mod+b exec $browser
bindsym $mod+e exec $explorer
bindsym $mod+f exec $menu
bindsym $mod+t exec $terminal

## Sway

bindsym $mod+Shift+c kill
bindsym $mod+Shift+r reload

for_window [title="fzf-switcher"] floating enable

bindsym $mod+r exec $HOME/.config/sway/scripts/rename_workspace.sh
bindsym $mod+m exec $HOME/.config/sway/scripts/focus_by_mark.sh
bindsym $mod+Shift+m exec $HOME/.config/sway/scripts/set_mark.sh
bindsym $mod+w exec $HOME/.config/sway/scripts/focus_workspace.sh

## Window

bindsym $mod+v splith
bindsym $mod+x splitv

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+space floating toggle

bindsym $mod+a focus parent

## Workspaces

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5

## Layout

bindsym $mod+z fullscreen

bindsym $mod+$alt+$down resize grow height 5px
bindsym $mod+$alt+$up resize shrink height 5px
bindsym $mod+$alt+$left resize grow width 20px
bindsym $mod+$alt+$right resize shrink width 20px

# MUSIC

bindsym $mod+s workspace music
bindsym $mod+Shift+s move container to workspace music

# FIX: wezterm --class does not set app_id
assign [class="ncspot"] workspace music
assign [app_id="pavucontrol"] workspace music

bar {
        swaybar_command waybar
    }
}
