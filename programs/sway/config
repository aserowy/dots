set $browser "microsoft-edge-beta \
    --enable-features=UseOzonePlatform,WebRTCPipeWireCapturer \
    --ozone-platform=wayland"

set $explorer wezterm start --class lf -- lf
set $menu exec $HOME/.config/rofi/launch.sh drun 
set $terminal wezterm

# STARTUP

# exec_always $HOME/.config/sway/gsettings.sh
exec_always dbus-update-activation-environment --systemd \
    DISPLAY SWAYSOCK GTK_IM_MODULE QT_IM_MODULE XMODIFIERS \
    DBUS_SESSION_BUS_ADDRESS WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

exec $HOME/.config/sway/wallpaper.sh

exec dunst
exec eww daemon
exec onedrive --monitor

exec swayidle -w -d \
    timeout 600 'systemctl suspend'

exec spotify

# STYLING

default_border pixel 1

for_window [class=".*"]     opacity .97
for_window [app_id=".*"]    opacity .97

client.focused          #61afef #61afef #61afef #61afef #61afef
client.focused_inactive #282c34 #282c34 #282c34 #282c34 #282c34
client.urgent           #e06c75 #e06c75 #e06c75 #e06c75 #e06c75
client.unfocused        #282c34 #282c34 #282c34 #282c34 #282c34

gaps top 15
gaps bottom 15
gaps left 15
gaps right 15

gaps inner 10

# KEYBINDINGS
    
set $mod Mod4
set $alt Mod1

set $left h
set $down j
set $up k
set $right l

## Applications

bindsym $mod+b exec $browser
bindsym $mod+e exec $explorer
bindsym $mod+f exec $menu
bindsym $mod+t exec $terminal

## Sway

bindsym $mod+q exec $HOME/.config/rofi/launch.sh power
bindsym $mod+Shift+c kill
bindsym $mod+Shift+r reload

for_window [title="fzf-switcher"] floating enable

bindsym $mod+r exec $HOME/.config/sway/scripts/rename_workspace.sh
bindsym $mod+w exec $HOME/.config/rofi/launch.sh workspace
bindsym $mod+Shift+w exec $HOME/.config/rofi/launch.sh move
bindsym $mod+a exec $HOME/.config/sway/scripts/create_workspace.sh

bindsym $mod+n workspace prev_on_output
bindsym $mod+p workspace next_on_output

bindsym $mod+m exec $HOME/.config/rofi/launch.sh mark
bindsym $mod+Shift+m exec $HOME/.config/sway/scripts/set_mark.sh

## Window

bindsym $mod+v splith
bindsym $mod+x splitv

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+space floating toggle

bindsym $mod+u focus parent

## Layout

bindsym $mod+z fullscreen

bindsym $mod+$alt+$down resize grow height 5px
bindsym $mod+$alt+$up resize shrink height 5px
bindsym $mod+$alt+$left resize grow width 20px
bindsym $mod+$alt+$right resize shrink width 20px

# MUSIC

bindsym $mod+s workspace music

# FIX: wezterm --class does not set app_id
assign [class="ncspot"] workspace music
assign [app_id="spotify"] workspace music
assign [app_id="pavucontrol"] workspace music

bar {
        swaybar_command waybar
    }
}
