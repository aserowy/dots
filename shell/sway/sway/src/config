set $browser "microsoft-edge-beta \
    --enable-features=UseOzonePlatform,WebRTCPipeWireCapturer \
    --ozone-platform=wayland"

set $explorer wezterm start --class lf -- lf
set $menu exec /etc/rofi/launch.nu drun 
set $terminal wezterm

# INPUTS

input "1133:49970:Logitech_Gaming_Mouse_G502" {
    accel_profile "flat"
    pointer_accel 0.4
}

input type:keyboard {
    # compose on right alt to be able to write äöüß
    xkb_options "compose:ralt"
}

# OUTPUTS

output DP-1 position 0 0
output DP-2 transform 270

# STARTUP

exec_always /etc/sway/scripts/gsettings.sh
exec /etc/sway/scripts/wallpaper.sh
exec wl-paste -t text --watch clipman store --no-persist

# Don't allow applications to inhibit shortcuts, i.e. grab total control of the
# keyboard. Chrome currently abuses this by enabling it for all "--app=..."
# shortcuts.

seat * shortcuts_inhibitor disable

# STYLING

default_border pixel 1
default_floating_border pixel 1

# class                 border  backgr. text    indi.   child_border
client.focused          #61afef #3e4451 #abb2bf #98c379 #61afef
client.focused_inactive #5c6370 #3e4451 #abb2bf #5c6370 #5c6370
client.unfocused        #5c6370 #3e4451 #abb2bf #23272e #23272e
client.urgent           #5c6370 #3e4451 #abb2bf #e06c75 #e06c75
client.placeholder      #23272e #3e4451 #abb2bf #23272e #23272e

gaps left 0
gaps top 5
gaps right 5
gaps bottom 5

gaps inner 20

# KEYBINDINGS

set $mod Mod4
set $alt Mod1

set $left h
set $down j
set $up k
set $right l

## Applications

bindsym $mod+b exec $browser
bindsym $mod+e exec $explorer
bindsym $mod+space exec $menu
bindsym $mod+t exec $terminal

## Sway

bindsym $mod+q exec /etc/rofi/launch.nu power
bindsym $mod+Shift+c kill
bindsym $mod+Shift+r reload

for_window [title="fzf-switcher"] floating enable

bindsym $mod+r exec /etc/sway/scripts/rename_workspace.sh
bindsym $mod+w exec /etc/rofi/launch.nu workspace
bindsym $mod+Shift+w exec /etc/rofi/launch.nu move

bindsym $mod+n exec /etc/sway/scripts/focus_workspace.nu next
bindsym $mod+p exec /etc/sway/scripts/focus_workspace.nu prev

bindsym $mod+s scratchpad show
bindsym $mod+Shift+s move scratchpad

## Window

mouse_warping none

bindsym $mod+v splith
bindsym $mod+x splitv

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+f focus mode_toggle
bindsym $mod+Shift+f floating toggle

bindsym $mod+u focus parent

## Layout

bindsym $mod+z fullscreen

bindsym $mod+$alt+$down resize grow height 20px
bindsym $mod+$alt+$up resize shrink height 20px
bindsym $mod+$alt+$left resize grow width 20px
bindsym $mod+$alt+$right resize shrink width 20px

# GAMING

for_window [title="Lutris" tiling] move container to workspace "gaming", focus
for_window [class="gw2-64.exe" tiling] move container to workspace "gw", focus

# NOTES

for_window [class="obsidian" tiling] move container to workspace "notes", focus

# WAYBAR

bar {
    swaybar_command waybar
}

# SESSION TARGET

include /etc/sway/config.d/*
