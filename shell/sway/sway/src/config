set $browser "microsoft-edge \
    --enable-features=UseOzonePlatform,WebRTCPipeWireCapturer \
    --ozone-platform=wayland"

set $explorer wezterm start --class lf -- lf
set $menu exec /etc/rofi/launch.sh drun 
set $terminal wezterm

# INPUTS

input "1133:49970:Logitech_Gaming_Mouse_G502" {
    accel_profile "flat"
    pointer_accel 0.4
}

input "12851:25345:Ducky_Ducky_One2_Mini_RGB" {
    # compose on right alt to be able to write äöüß
    xkb_options "compose:ralt"
}

# OUTPUTS

output DP-2 transform 270

# STARTUP

exec_always /etc/sway/scripts/gsettings.sh
exec /etc/sway/scripts/wallpaper.sh
exec wl-paste -t text --watch clipman store --no-persist

# STYLING

font pango:monospace 0

default_border pixel 1
default_floating_border pixel 1

# class                 border  backgr. text    indi.   child_border
client.focused          #61afef #3e4451 #abb2bf #98c379 #61afef
client.focused_inactive #5c6370 #3e4451 #abb2bf #5c6370 #5c6370
client.unfocused        #5c6370 #3e4451 #abb2bf #23272e #23272e
client.urgent           #5c6370 #3e4451 #abb2bf #e06c75 #e06c75
client.placeholder      #23272e #3e4451 #abb2bf #23272e #23272e

gaps outer 5
gaps inner 20

# KEYBINDINGS
    
set $mod Mod4
set $alt Mod1

set $left h
set $down j
set $up k
set $right l

## Applications

bindsym $mod+b exec $browser
bindsym $mod+e exec $explorer
bindsym $mod+space exec $menu
bindsym $mod+t exec $terminal

## Sway

bindsym $mod+q exec /etc/rofi/launch.sh power
bindsym $mod+Shift+c kill
bindsym $mod+Shift+r reload

for_window [title="fzf-switcher"] floating enable

bindsym $mod+r exec /etc/sway/scripts/rename_workspace.sh
bindsym $mod+w exec /etc/rofi/launch.sh workspace
bindsym $mod+Shift+w exec /etc/rofi/launch.sh move

bindsym $mod+n workspace next
bindsym $mod+p workspace prev

bindsym $mod+m exec /etc/rofi/launch.sh mark
bindsym $mod+Shift+m exec /etc/sway/scripts/set_mark.sh

bindsym $mod+s scratchpad show

workspace_auto_back_and_forth yes

## Window

bindsym $mod+v splith
bindsym $mod+x splitv

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+f focus mode_toggle
bindsym $mod+Shift+f floating toggle

bindsym $mod+u focus parent

## Layout

bindsym $mod+z fullscreen

bindsym $mod+$alt+$down resize grow height 5px
bindsym $mod+$alt+$up resize shrink height 5px
bindsym $mod+$alt+$left resize grow width 20px
bindsym $mod+$alt+$right resize shrink width 20px

# GAMING

for_window [title="MTGA"] move container to workspace "mtga", floating disable, focus
for_window [class="gw2-64.exe" tiling] move container to workspace "gw", focus, move left, move left, move left, resize grow width 700px

# MUSIC

exec spotify

for_window [class="Spotify"] move scratchpad

# WAYBAR

bar {
    swaybar_command waybar
}

# SESSION TARGET

include /etc/sway/config.d/*
