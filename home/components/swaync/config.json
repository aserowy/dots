{
  "$schema": "https://raw.githubusercontent.com/ErikReider/SwayNotificationCenter/refs/heads/main/src/configSchema.json",
  "positionX": "left",
  "positionY": "top",
  "cssPriority": "user",

  "control-center-width": 400,
  "control-center-margin-top": 0,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 0,
  "control-center-margin-left": 0,

  "notification-window-width": 400,
  "notification-icon-size": 48,
  "notification-body-image-height": 160,
  "notification-body-image-width": 200,

  "timeout": 4,
  "timeout-low": 2,
  "timeout-critical": 6,

  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,

  "notification-visibility": {
    "example-name": {
      "state": "muted",
      "urgency": "Low",
      "app-name": "Spotify"
    }
  },

  "widgets": ["buttons-grid", "mpris", "title", "notifications"],
  "widget-config": {
    "buttons-grid": {
      "actions": [
        {
          "label": "󰋋",
          "command": "pavucontrol"
        },
        {
          "label": "󰅍",
          "command": "nu ~/.config/clipman/open_history.nu"
        },
        {
          "label": "󰹑",
          "command": "nu ~/.config/screenshot/screenshot.nu area"
        }
      ]
    },
    "mpris": {
      "image-size": 48,
      "image-radius": 12
    },
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "󰗨"
    }
  }
}
