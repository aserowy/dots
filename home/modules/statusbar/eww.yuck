;; all icons are nf-md-...

(include "./widgets/audio.yuck")
(include "./widgets/clock.yuck")
(include "./widgets/clipboard.yuck")
(include "./widgets/group_lock.yuck")
(include "./widgets/network.yuck")
(include "./widgets/screenshot.yuck")
(include "./widgets/recorder.yuck")
(include "./widgets/workspaces.yuck")

(defwindow statusbar
    :geometry (geometry
        :height "100%"
        :anchor "center left"
    )
    :monitor 0
    :exclusive true
    :stacking "background"
    :namespace "eww_statusbar"
    (statusbar)
)

(defwidget statusbar []
    (centerbox
        :orientation "vertical"
        (box
            :orientation "horizontal"
            :valign "start"
            :space-evenly false
            (box
                :width 12
            )
            (box
                :orientation "vertical"
                :class "top"
                :halign "fill"
                :width 24
                :space-evenly false
                (clipboard)
                (screenshot)
                (recorder)
            )
        )
        (workspaces)
        (box
            :orientation "horizontal"
            :valign "end"
            :space-evenly false
            (box
                :width 12
            )
            (box
                :orientation "vertical"
                :class "bottom"
                :halign "fill"
                :width 24
                :space-evenly false
                (box
                    :orientation "vertical"
                    :space-evenly false
                    :halign "fill"
                    :valign "end"
                    :style "padding-bottom: 16px"
                    (group_lock)
                    (audio)
                    (network)
                )
                (clock)
            )
        )
    )
)
