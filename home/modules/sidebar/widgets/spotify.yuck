(deflisten status
    :initial ''
    `playerctl -p spotify --follow status`
)
(deflisten song
    :initial '{"artist": "", "title": "", "length": "1"}'
    `playerctl -p spotify --follow metadata --format '{"artist": "{{ artist }}", "title": "{{ title }}", "length": "{{ mpris:length }}"}'`
)
(deflisten progress
    :initial '{"current": "0"}'
    `playerctl -p spotify --follow position --format '{"current": "{{ position }}"}'`
)

(defwidget spotify []
    (box
        :class "${ status == 'Playing' ? 'container' : 'container-disabled' }"
        :orientation "vertical"
        :spacing 5
        :space-evenly false
        (box
            :orientation "horizontal"
            :halign "end"
            :spacing 10
            :space-evenly false
            (label
                :class "highlight"
                :limit-width 27
                :show-truncated true
                :visible "${status != ''}"
                :text "${song.artist} - ${song.title}"
            )
            (label
                :class "nerd-icon"
                :text "ó°“‡"
            )
        )
        (box
            :class "progress_bar"
            :halign "end"
            :vexpand "false"
            :hexpand "false" 
            :visible "${status != ''}"
            (scale
                :min 0
                :max 100
                :value "${round(100 * progress.current / song.length, 2)}"
            )
        )
    )
)
